<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_margin="4dp"
    android:background="@drawable/square_touch_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_img"
        android:transitionName="img"
        android:layout_width="110dp"
        android:layout_height="110dp" />

    <TextView
        android:id="@+id/search_title"
        android:layout_toRightOf="@+id/search_img"
        android:textColor="@color/calendar_title_color"
        android:textSize="@dimen/calender_item_title_size"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/search_outline"
        android:layout_toRightOf="@+id/search_img"
        android:layout_below="@+id/search_title"
        android:textSize="@dimen/calender_item_outline_size"
        android:paddingLeft="6dp"
        android:paddingBottom="10dp"
        android:textColor="@color/calendar_detail_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/search_type"
        android:layout_toRightOf="@+id/search_img"
        android:layout_below="@+id/search_outline"
        android:textSize="@dimen/calender_item_outline_size"
        android:paddingLeft="6dp"
        android:paddingBottom="10dp"
        android:textColor="@color/calendar_detail_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>